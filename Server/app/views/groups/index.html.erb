<h1>Listing groups</h1>

<div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th class="hidden"></th>
          <th class="hidden"></th>
          <th class="hidden"></th>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.name %></td>
            <td class="show-link hidden"><%= link_to 'Show', group %></td>
            <td class="edit-link hidden"><%= link_to 'Edit', edit_group_path(group) %></td>
            <td class="destroy-link hidden"><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

